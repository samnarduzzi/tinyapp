      <% if (user) {%> 
        <h5 class="nav-item nav-link" style="margin-bottom: 4px">Logged in as: <%= user.email %></h5>
          <form class="form-inline" method="POST" action="/logout" style="margin-bottom: 8px">
           <button type="submit" class="btn btn-outline-dark">Logout</button>
